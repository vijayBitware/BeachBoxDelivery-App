<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/backgroundGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="true">


        <com.beachboxdeliveryapp.widgets.TextViewBold
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="@string/notification"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:gravity="center"/>
    </LinearLayout>



    <LinearLayout  android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="9" android:weightSum="10" android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.9"
            android:id="@+id/lv_notification"
            android:divider="@null">

        </ListView>
    </LinearLayout>

</LinearLayout>